<resources>

    <!-- Blue Theme -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryBlue</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryBlue</item>
        <item name="android:textColor">@color/textColorBlue</item>
        <item name="preferenceTheme">@style/PreferenceThemeBlue</item>
        <item name="alertDialogTheme">@style/PreferenceThemeBlue</item>
    </style>

    <style name="PreferenceThemeBlue" parent="AppThemeBlue">
        <item name="android:textColorPrimary">@color/textColorBlue</item>
        <item name="android:textColorSecondary">@color/textColorSecondaryInverseBlue</item>
        <item name="tabIndicatorColor">@color/tabIndicatorColor</item>
        <item name="android:windowIsFloating">true</item>
    </style>

